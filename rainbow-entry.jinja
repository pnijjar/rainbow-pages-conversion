<html>
<head>
  <title>Rainbow Pages Listing</title>
  <meta http-equiv="content-type" content ="text/html; charset=UTF-8"> 
</head>

<body>

{% for category,value in categories | dictsort %}

    <h2>{{ category }}</h2>

    {% for groupname,item in value | dictsort %}

        <p>
        <strong><i>{{ item['CompanyOrgName'] }}.</i></strong>
        {{ item['Brief Description'] }}
        {% if item['Telephone'] != '' %}
            {{ item['Telephone'] }}.
        {% endif %}
        {% if item['Web'] != '' %}
            <small><a href="{{ item['Web'] }}">{{ item['Web'] }}</a></small>
        {% endif %}
        {# Insert ampersand if BOTH facebook and web page exist #}
        {% if item['Web'] != '' and item['FacebookPage'] != '' %}
            <small> &amp; </small>
        {% endif %}
        {% if item['FacebookPage'] != '' %}
            <small><a href="{{ item['FacebookPage'] }}">{{ item['FacebookPage'] }}</a>
            </small>
        {% endif %}
        </p>

    {% endfor %}
{% endfor %}

</body>
</html>
