<html>
<head>
  <title>Rainbow Pages Listing</title>
    <meta http-equiv="content-type" content ="text/html; charset=UTF-8"> 
    <style type="text/css">
        body {font-family: Calibri, sans-serif; }
    </style>
</head>

<body>

    {% for category,value in categories | dictsort %}

        <h2>{{ category }}</h2>

        {% for groupname,item in value | dictsort %}

            <p>
            <strong><i>{{ item['CompanyOrgName'] }}.</i></strong>
            {{ item['Brief Description'] }}
            {% if item['Telephone'] != '' %}
                {{ item['Telephone'] }}.
            {% endif %}
            {% if item['Web'] != '' or item['FacebookPage'] != '' %}
                <small>
                {% if item['Web'] != '' %}
                    <a href="{{ item['Web'] }}">{{ item['Web'] }}</a>
                {% endif %}
                {# Insert ampersand if BOTH facebook and web page exist #}
                {% if item['Web'] != '' and item['FacebookPage'] != '' %}
                    &amp; 
                {% endif %}
                {% if item['FacebookPage'] != '' %}
                    <a href="{{ item['FacebookPage'] }}">{{ item['FacebookPage'] }}</a>
                {% endif %}
                </small>
            {% endif %}
            </p>

        {% endfor %}
    {% endfor %}

</body>
</html>
